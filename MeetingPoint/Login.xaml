<Page
    x:Class="MeetingPoint.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MeetingPoint"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ProgressBar x:Name="progBarPrijava" VerticalAlignment="Top" Background="Transparent"/>
        <TextBlock Text="MeetingPoint" Margin="10,30,0,0" Style="{StaticResource TitleTextBlockStyle}"/>
        <StackPanel VerticalAlignment="Center" Margin="10,0,10,0">
            <TextBlock Text="prijava" Style="{StaticResource HeaderTextBlockStyle}"/>
            <TextBox x:Name="tbxUsername" PlaceholderText="Vnesi uporabniško ime"/>
            <PasswordBox x:Name="tbxPassword" PlaceholderText="Vnesi geslo"/>
            <Button x:Name="btnLogin" Content="Prijava" HorizontalAlignment="Right" Click="btnLogin_Click"/>
        </StackPanel>
        <TextBlock x:Name="tblResult" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="10,0,10,10" Style="{StaticResource BodyTextBlockStyle}"/>
    </Grid>
</Page>
